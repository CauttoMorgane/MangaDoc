{% extends 'base.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}

    <div class="row my-5">
        <div class="col-md-3">
            <div class="card">
                <img class="card-img-top" src="http://lorempixel.com/180/200/abstract/"
                     alt="Card image cap">
                <div class="card-body">
                    <h4 class="text-center">{{ user.nickname }}</h4>

                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            {{ user.city }}
                        </li>
                        <li class="list-group-item">
                            {{ user.payment }}
                        </li>
                        {% if app.user and app.user.id == user.id %}
                            <li class="list-group-item">
                                <a href="{{ path('user_edit', {'id': user.id}) }}">Editer mon profil</a>
                            </li>
                            <li class="list-group-item">
                                <a href="{{ path('article_new') }}">Ajouter un article</a>
                            </li>
                            <li class="list-group-item">
                                <a href="{{ path('app_logout') }}">Déconnexion</a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </div>

        {#{{ dump(user.idArticles) }}#}

        <div class="col-md-9">
            <div class="row">
                {% for article in articles %}
                    <div class="col-lg-3 col-md-4 pb-3">
                        <a href="{{ path('article_show', { 'id' : article.id }) }}" class="card">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">
                                    <img src="http://lorempixel.com/35/35/abstract/" class="rounded" alt="...">
                                    <span class="ml-2">
                                        {% if article.idUser %}{{ article.idUser.nickname }}{% else %}Nom du vendeur{% endif %}</span>
                                </li>
                            </ul>
                            <img class="card-img-top" src="http://lorempixel.com/180/100/abstract/"
                                 alt="Card image cap">
                            <div class="card-body">
                                <h4>{{ article.price }} €</h4>
                                <p class="card-text text-muted">
                                    {{ article.title }} <br/>
                                    {% if article.integral %}Intégral{% endif %}
                                </p>
                            </div>
                        </a>
                    </div>
                {% else %}
                    <p class="text-center">Aucun article n'a été trouvé</p>
                {% endfor %}
            </div>
        </div>
    </div>


