{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="row justify-content-md-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title text-center">S'inscrire</h5>
                        {{ form_start(registrationForm) }}
                        {{ form_row(registrationForm.gender) }}
                        {{ form_row(registrationForm.gender) }}
                        {{ form_row(registrationForm.firstname) }}
                        {{ form_row(registrationForm.lastname) }}

                        {{ form_row(registrationForm.city) }}
                        {{ form_row(registrationForm.country) }}
                        <hr/>
                        {{ form_row(registrationForm.nickname) }}
                        {{ form_row(registrationForm.email) }}
                        {{ form_row(registrationForm.plainPassword) }}


                        <button class="btn btn-block btn-success">S'inscrire</button>
                        {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}