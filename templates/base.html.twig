<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
    {# beware that the blocks in your template may be named different #}
    {% block head_css %}
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
              integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO"
              crossorigin="anonymous">
        <link rel="stylesheet" type="text/css" href="{{ asset('build/app.css') }}"/>
    {% endblock %}
    {% block head_js %}
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
                integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
                crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"
                integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
                crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"
                integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy"
                crossorigin="anonymous"></script>
        <script src="https://kit.fontawesome.com/9518803ba9.js"></script>
    {% endblock %}

</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01"
            aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
        <a class="navbar-brand" href="{{ path('article_index') }}" style="color:#A80038; font-style: italic;">MangaDoc</a>
        <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
            <li class="nav-item active">
                <a class="nav-link" href="{{ path('article_index') }}">Articles<span class="sr-only">(current)</span></a>
            </li>
        </ul>
        <form class="form-inline my-2 my-lg-0">
            {{ render(controller(
              'App\\Controller\\SearchController::searchBar'
              ))
            }}
        </form>
        {% if app.user %}
            <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('user_show', {'id': app.user.id}) }}">Mon profil</a>
                </li>
            </ul>
        {% else %}
            <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_register') }}">Inscription</a>
                </li>
            </ul>
        {% endif %}
    </div>
</nav>
<div class="container-fluid">
    {% block body %}{% endblock %}
</div>
{% block javascripts %}

    <script type="text/javascript" src="../node_modules/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="../node_modules/jquery/dist/typeahead.bundle.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function (){
            var articles = new Bloodhound(
                {
                    datumTokenizer: Bloodhound.tokenizers.whitespace,
                    queryTokenizer: Bloodhound.tokenizers.whitespace,

                    remote: {
                        url: "{{ path('search') }}/%QUERY%",
                        wildcard: '%QUERY%',
                        filter: function(articles)
                        {
                            return $.map(articles, function(article)
                            {
                                return {
                                    article_id : article.id,
                                    article_title : article.title
                                }
                            })
                        }
                    }
                })
            articles.initialize();
            $('#search').typeahead(
                {
                    hint:true
                },
                {
                    name:'article',
                    source: articles.ttAdapter(),
                    display: 'article_title',
                    templates: {
                        suggestion: function(data)
                        {
                            return `
                <a href='{{ path('article_index') }}//`data+article.id+`'>
                  <strong>`+data.article_id+`</strong>
                  <span>`+data.article_title+`</span>
                </a>
                `
                        },
                        footer: function (query)
                        {
                            return '<div class="text-center">More results about: '+ query.query +'</div>'
                        }
                    }
                })
        })
    </script>

{% endblock %}
</body>
</html>